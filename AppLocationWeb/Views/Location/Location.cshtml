                ll: ll,
                open_now: 'true',
                sort: 'DISTANCE'
            });
            const results = await fetch(
                `https://api.foursquare.com/v3/places/search?${searchParams}`,
                {
                    method: 'GET',
                    headers: {
                        Accept: 'application/json',
                        Authorization: 'fsq3WrG+/PGBTdjVwCHiQJ/fIQB92ShDBPc7BdLM9jLNWyE=',
                    }
                }
            );
            const data = await results.json();
            return data;
        } catch (err) {
            console.error(err);
